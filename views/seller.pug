#wrapper.wrapper
  // Start Menu Grid Area
  section.food__menu__grid__area.section-padding--lg
    .container
      .list__btn
        a.food__btn.grey--btn.theme--hover(href='addBookPage') Add Book
      .list__btn
        a.food__btn.grey--btn.theme--hover(href='/') Back
      if result
        for books in result
          .row.mt--30
            .col-lg-12
              #nav-tabContent.fd__tab__content.tab-content
                #nav-all.food__list__tab__content.tab-pane.fade.show.active(role='tabpanel')
                  .single__food__list.d-flex.wow.fadeInUp
                    .food__list__thumb
                      a(href='')
                      //-  img(src='uploads/images/'+result.books.imagePath alt='list food images')
                    .food__list__inner.d-flex.align-items-center.justify-content-between
                      .food__list__details
                        h2
                          a(href='#') #{books.title}
                        p
                          | #{books.authors} #{books.authors} #{books.authors} #{books.authors} #{books.authors} #{books.authors} #{books.authors} #{books.authors} #{books.authors}
                        .list__btn
                          form(method='POST' action='updateBookPage')
                            input(type='hidden' name='bookId' value=books.bookId)
                            button.food__btn.grey--btn.theme--hover(type='submit') Update Book
                        .list__btn
                          form(method='POST' action='uploadImagePage')
                            input(type='hidden' name='bookId' value=books.bookId)
                            button.food__btn.grey--btn.theme--hover(type='submit') Upload Image
                        .list__btn
                          form(method='POST' action='viewImageSeller')
                            input(type='hidden' name='bookId' value=books.bookId)
                            button.food__btn.grey--btn.theme--hover(type='submit') View Image
                        .list__btn
                          form(method='POST' action='deleteImage')
                            input(type='hidden' name='bookId' value=books.bookId)
                            button.food__btn.grey--btn.theme--hover(type='submit') Delete Image

                          button.food__btn.grey--btn.theme--hover(type='button' id=books.bookId onclick='myFunction(this)') Delete Book
                          //- #myModal.modal
                          //-   // Modal content
                          //-   .modal-content
                          //-     span.close &times;
                          //-     form(method='POST' action='deleteBook')
                          //-       input(type='hidden' name='bookId' value=books.bookId)
                          //-       button.food__btn.grey--btn.theme--hover(type='submit') Delete Book
                      .food__rating
                        .list__food__prize
                          span $#{books.price}
      
      #myModal.modal
        // Modal content
        .modal-content
          span.close &times;
          form(method='POST' action='deleteBook')
              input(type='hidden' name='bookId' id="modID")
              button.food__btn.grey--btn.theme--hover(type='submit') Delete Book
script.
  // Get the modal
  var modal = document.getElementById("myModal");
  // Get the button that opens the modal
  // Get the <span> element that closes the modal
  var span = document.getElementsByClassName("close")[0];
  // When the user clicks the button, open the modal
    var btn ="";
  btn.onclick = function() {
  modal.style.display = "block";
  }
  function myFunction(id) {
    //- alert(id.id);
    btn=id.id;
    document.getElementById("modID").value=btn;
    modal.style.display = "block";
  }

  // When the user clicks on <span> (x), close the modal
  span.onclick = function() {
  modal.style.display = "none";
  }
  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
  if (event.target == modal) {
  modal.style.display = "none";
  }
  }
